/* pages/user/user.wxss */
.top{
  display: flex;
  width: 100%;
  height: 170px;
  background-color: #66a2ff;
  flex-wrap: wrap;
}
.top_icon{
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_icon>image{
  width: 70px;
  height: 70px;
}
.top_text{
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
.content{
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 20px;
  font-size: 15px;
}
.content_box{
  display: flex;
  width: 100%;
  height: 30px;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.key{
  width: 25%;
  display: flex;
  align-items: center;
}
.value{
  width: 65%;
  display: flex;
  align-items: center;
}