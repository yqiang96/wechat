
.contioner{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 13px;
}
.centant{
  width: 80%;
  height: 230px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.centant>input{
  width: 100%;
  height: 40px;
  display: flex;
  border: 1px solid #bebebe;
  margin-bottom: 10px;
  border-radius: 5px;
  padding-left: 20px;
}
.verification{
  width: 100%;
  height: 40px;
  display: flex;
  flex-wrap: nowrap;
  margin-bottom: 10px;
}
.verification>input{
  width: 60%;
  height: 40px;
  display: flex;
  border: 1px solid #bebebe;
  border-radius: 5px;  
  padding-left: 20px;
}
.verification>button{
  width: 35%;
  height: 40px;
  display: flex;
  font-size: 14px;
  color: #66a2ff;
  border: 1px solid #66a2ff;
}
.centant>button{
  width: 100%;
  height: 40px;
  background-color: #66a2ff;
  color: white;
  margin: 10px 0;
  font-size: 16px;
}
