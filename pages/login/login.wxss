page {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}
.login-icon {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: column-reverse;
  align-items: center
}
.iconfont{
  color: #66a2ff;
}
.icon-yonghu{
  width: 80px;
  height: 80px;
}
.login-from {
  flex: auto;
  height: 40%;
  width: 100%;
}
.inputView{
  width: 100%;
  height: 30px;
  display: flex;
  align-items: center;
  margin-top: 40px;
}
.inputView>.iconfont{
  color: #ccc
}
.icon-yulan{
  font-size: 23px;
  position: absolute;
  right: 10%;
}
 
.inputText {
  display: inline-block;
  color: #ccc;
  font-size: 13px;
  width: 80%;
  padding-left: 15px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
  /* margin-bottom: 25px; */
}
.checkboxGroup{
  width: 100%;
  height: 20px;
  padding: 15px 0 15px 0px;
}
.checkbox {
  margin-top: 10px;
}
.check-text {
  font-size: 12px;
  color: #4d4d4d;
}
.loginBtnView {
  width: 100%;
  height: auto;
  margin-top: 5px;
  margin-bottom: 5px;
  padding-bottom: 0px;
}
.loginBtn {
  width: 100%;
  height: 40px;
  color: #fff;
  margin-top: 10px;
  /* border-radius: 20px; */
  background-color: #66a2ff;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.end {
  margin: 10px 0 0 0;
}
.end>text {
  font-size: 12px;
  color: #66a2ff;
}
.text2 {
  float: right;
}
.foot{
  display: flex;
  height: 10%;
  width: 100%;
  font-size: 15px;
  color: rgb(143, 142, 142);
  justify-content: center;
  align-items: center;
}
.btnhover{
  box-shadow: 3px 3px 2px #a6a6a7;
}